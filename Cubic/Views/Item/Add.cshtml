@using Application.DTOs
@model ItemDTO
@{
    ViewBag.Title = "Add";
    ViewBag.SLevel = "Item";
}
<link href="~/Scripts/DatePickerNew/css/datepicker.css" rel="stylesheet" />
<script src="~/Scripts/DatePickerNew/js/bootstrap-datepicker.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<div id="main" role="main">
    <div id="content">
        <div class="row">
            <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">
                <h1 class="page-title txt-color-blueDark">
                    <i class="fa fa-th-list"></i>
                    Add New Item
                </h1>
            </div>
        </div>
        <section id="widget-grid">
            <div class="row">
                <article class="col-sm-12 col-md-12 col-lg-12">
                    <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                        <header>
                            <span class="widget-icon"> <i class="fa fa-th-list"></i> </span>
                            <h2></h2>
                            <span class="jarviswidget-loader" style="display: none;"><i class="fa fa-refresh fa-spin"></i></span>
                        </header>
                        <div>
                            <div class="widget-body fuelux">
                                <div class="step-content">
                                    @using (Html.BeginForm("Add", "Item", FormMethod.Post, new { @class = "smart-form", id = "ADDform" }))
                                    {
                                        <div class="step-pane active" id="step2">
                                            <br>
                                            <fieldset>
                                                <div class="row">
                                                    <section class="col col-6">
                                                        <div class="form-group">
                                                            <label class="col-md-3 control-label"><b>Item Name</b></label>
                                                            <div class="col-md-6">
                                                                <div class="input">
                                                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", required = "required", id = "Name" })
                                                                    @Html.ValidationMessageFor(model => model.Name, null, new { @class = "error" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </section>
                                                    <section class="col col-6">
                                                        <div class="form-group">
                                                            <label class="col-md-3 control-label"><b>Description</b></label>
                                                            <div class="col-md-6">
                                                                <div class="input">
                                                                    @Html.TextBoxFor(m => m.Description, new { @class = "form-control", required = "required", id = "Description" })
                                                                    @Html.ValidationMessageFor(model => model.Description, null, new { @class = "error" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </section>
                                                </div>
                                                <div class="row">
                                                    <section class="col col-6">
                                                        <div class="form-group">
                                                            <label class="col-md-3 control-label"><b>Active</b></label>
                                                            <div class="col-md-6">
                                                                <div class="col-sm-9 d-flex align-items-center">
                                                                    @Html.CheckBoxFor(m => m.IsActive, new { id = "IsActive", @class = "form-check-input" })
                                                                    @Html.ValidationMessageFor(m => m.IsActive, null, new { @class = "text-danger" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </section>
                                                </div>
                                            </fieldset>
                                            <footer>
                                                <a href="@Url.Action("Index", "Item")" class="btn bg-color-red txt-color-white">
                                                    <i class="fa fa-times"></i> cancel
                                                </a>
                                                <button type="submit" class="btn bg-color-greenLight txt-color-white">
                                                    Save <i class="glyphicon glyphicon-thumbs-up"></i>
                                                </button>
                                            </footer>
                                        </div>

                                    }
                                </div>

                            </div>
                        </div>
                    </div>
                </article>
            </div>
        </section>
    </div>
</div>